[layer_names]

; Collision layer definitions (bitmask filtering)
; Why define names: Makes collision setup readable in editor
; How it works: Each layer is a bit (1, 2, 4, 8...). Nodes check "layer" (what I am) vs "mask" (what I collide with)
; 
; Example: Player (layer 1, mask 2) collides with Walls (layer 2, mask 0)
; Player.collision_layer = 1 (binary: 0001)
; Player.collision_mask = 2 (binary: 0010)
; Wall.collision_layer = 2 (binary: 0010)
; Wall.collision_mask = 0 (binary: 0000) - walls don't need to detect anything
;
; This allows complex filtering: "player collides with world and enemies, but enemies don't collide with each other"

2d_physics/layer_1="player"
2d_physics/layer_2="world"
2d_physics/layer_3="enemies"
2d_physics/layer_4="interactables"
2d_physics/layer_5="items"

[physics]

; Physics timestep configuration
; Why this matters: Affects consistency of physics calculations
; common/physics_ticks_per_second: How often physics updates (default 60)
; Higher = more accurate but more CPU
; Lower = less accurate but better performance
; 60 is optimal for most 2D games (matches typical monitor refresh rate)
common/physics_ticks_per_second=60

[rendering]

; 2D renderer settings
textures/canvas_textures/default_texture_filter=0
renderer/rendering_method="gl_compatibility"
renderer/rendering_method.mobile="gl_compatibility"
